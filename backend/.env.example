# Environment variables template
# Copy this file to .env and update with your actual values

PORT=3001
NODE_ENV=development

# MongoDB Configuration - PLEASE UPDATE WITH YOUR ACTUAL CREDENTIALS
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password
MONGODB_CLUSTER=your_cluster_url
MONGODB_DATABASE=optimizemyresume

# JWT Secret - Please generate a secure random string
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (Gmail) - PLEASE UPDATE WITH YOUR ACTUAL CREDENTIALS
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Stripe Configuration - Get these from Stripe dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Admin Configuration - PLEASE UPDATE WITH SECURE CREDENTIALS
ADMIN_EMAIL=admin@optimizemyresume.pro
ADMIN_PASSWORD=your_secure_admin_password

# CORS
FRONTEND_URL=https://optimizemyresume.pro

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100